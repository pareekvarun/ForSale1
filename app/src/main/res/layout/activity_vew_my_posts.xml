<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_vew_myPosts">

    <ImageView
        android:id="@+id/imageViewPost"
        android:layout_width="wrap_content"
        android:layout_height="300dp"

        android:scaleType="centerCrop"
        android:src="@drawable/ic_android"
        app:layout_constraintBottom_toTopOf="@+id/textViewTitle"
        app:layout_constraintEnd_toEndOf="@+id/textViewTitle"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="393dp"
        android:layout_height="wrap_content"


        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:textAlignment="gravity"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewDescription"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPost"
        />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="384dp"
        android:layout_height="wrap_content"


        app:layout_constraintBottom_toTopOf="@+id/textViewPrice"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        />

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="372dp"
        android:layout_height="wrap_content"


        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewMisc"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescription"
        />

    <TextView
        android:id="@+id/textViewMisc"
        android:layout_width="372dp"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@+id/btn_deletePost"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPrice"
        />

    <Button
        android:id="@+id/btn_deletePost"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginStart="8dp"

        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/white_onclick_grey"
        android:padding="12dp"
        android:text="Delete Post"
        android:textColor="@color/red3"
        android:textColorLink="#00E40F0F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="585dp" />

</android.support.constraint.ConstraintLayout>